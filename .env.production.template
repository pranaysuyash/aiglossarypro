# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Application Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Security Configuration
SESSION_SECRET=your-super-secure-32-character-secret-here
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Authentication (OAuth - Optional for cost-free auth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Gumroad Integration
GUMROAD_WEBHOOK_SECRET=your-gumroad-webhook-secret

# OpenAI API (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io

# Logging
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# Performance & Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Analytics (Optional)
POSTHOG_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com