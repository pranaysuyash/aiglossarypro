# Enhanced Visual Audit Configuration
# Copy this file to .env.local or add these variables to your existing .env file

# Base URL for testing (default: http://localhost:3001)
BASE_URL=http://localhost:3001

# Claude API key for AI-powered screenshot analysis
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here

# Browser settings
HEADLESS=true                     # Set to false to see browser during tests
SLOW_MO=0                        # Milliseconds to slow down operations (useful for debugging)

# Visual regression settings
UPDATE_BASELINE=false            # Set to true to update baseline screenshots
VISUAL_THRESHOLD=1               # Percentage difference threshold for visual regression

# Performance thresholds (in milliseconds)
PERF_FCP_THRESHOLD=1800         # First Contentful Paint threshold
PERF_LCP_THRESHOLD=2500         # Largest Contentful Paint threshold
PERF_TTI_THRESHOLD=3800         # Time to Interactive threshold
PERF_CLS_THRESHOLD=0.1          # Cumulative Layout Shift threshold

# Lighthouse settings
LIGHTHOUSE_PERF_THRESHOLD=90    # Lighthouse performance score threshold (0-100)
LIGHTHOUSE_A11Y_THRESHOLD=95    # Lighthouse accessibility score threshold (0-100)

# Report settings
REPORT_FORMAT=html              # html, markdown, json, or all
INCLUDE_SCREENSHOTS=true        # Include screenshots in reports
INCLUDE_VIDEOS=true            # Include video recordings
GENERATE_TASK_LIST=true        # Generate actionable task list

# Notification settings
EMAIL_REPORT=false             # Send report via email after completion
SLACK_WEBHOOK_URL=             # Slack webhook URL for notifications
TEAMS_WEBHOOK_URL=             # Microsoft Teams webhook URL

# Advanced settings
MAX_CONCURRENT_TESTS=3         # Number of tests to run in parallel
TEST_TIMEOUT=30000            # Test timeout in milliseconds
SCREENSHOT_QUALITY=90         # Screenshot quality (0-100)
VIDEO_QUALITY=medium          # Video quality: low, medium, high

# Debug settings
DEBUG_MODE=false              # Enable debug logging
SAVE_CONSOLE_LOGS=false       # Save browser console logs
SAVE_NETWORK_LOGS=false       # Save network request logs

# Component testing
TEST_ALL_COMPONENTS=true      # Test all defined components
TEST_ALL_BREAKPOINTS=true     # Test all responsive breakpoints
TEST_DARK_MODE=true          # Test dark mode compatibility

# Accessibility testing
WCAG_LEVEL=AA                # WCAG compliance level: A, AA, AAA
TEST_KEYBOARD_NAV=true       # Test keyboard navigation
TEST_FOCUS_STATES=true       # Test focus indicators
TEST_COLOR_CONTRAST=true     # Test color contrast ratios

# Performance testing
TEST_CORE_WEB_VITALS=true    # Test Core Web Vitals
TEST_ANIMATIONS=true         # Test animation performance
LIGHTHOUSE_ENABLED=true      # Run Lighthouse audits

# CI/CD settings
CI_MODE=false                # Enable CI-friendly output
FAIL_ON_CRITICAL=true       # Fail build if critical issues found
FAIL_ON_REGRESSION=false    # Fail build on visual regressions

# Output directories
OUTPUT_DIR=visual-audits     # Base output directory
SCREENSHOTS_DIR=screenshots  # Screenshots subdirectory
REPORTS_DIR=reports         # Reports subdirectory
VIDEOS_DIR=videos           # Videos subdirectory